<tr>
  <% @user = User.find(params[:id]) %>
  <% @review_match = get_user_review(@user) %>
  <% @review = Review.new%>
<tbody>
  <% @review_match.each do |review| %>
    <tr>
      <strong>Review text: </strong>
      <td><%= review.review %></td>
      <br>
      <strong>Rating</strong>
      <td><%= review.rating %></td>
      <br> <br>
    </tr>
  <% end %>
</tbody>  
</tr>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@review) do |f| %>

      <%= f.hidden_field :reviewee_id, :value => @user.id %>

      <%= f.label :review %>
      <%= f.text_field :review %>

      <%= f.label :rating %>
      <%= f.text_field :rating %>

      <br><%= f.submit "Leave Review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>