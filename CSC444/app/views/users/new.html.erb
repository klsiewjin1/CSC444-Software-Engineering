<% provide(:title, 'Sign Up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username %>
      
      <%= f.label :fname, "First name" %>
      <%= f.text_field :fname %>
      
      <%= f.label :lname, "Last name" %>
      <%= f.text_field :lname %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :email_confirmation, "Email Confirmation" %>
      <%= f.email_field :email_confirmation %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation %>
      
      <%= f.label :user_type %>
      <%= f.select :user_type, [['Client', 'client'], ['Teenager', 'teenager']] %>

      <br><%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Back', users_path %>
