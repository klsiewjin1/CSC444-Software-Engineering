<% provide(:title, 'Leave a Review') %>
<h1>Leave a Review</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@review) do |f| %>
      <%= f.label :review %>
      <%= f.text_field :review %>

      <%= f.label :rating %>
      <%= f.text_field :rating %>

      <br><%= f.submit "Leave Review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Back', reviews_path %>