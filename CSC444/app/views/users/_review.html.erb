<tr>
  <% @review_matches = get_user_reviews(@user) %>
  <% @review = Review.new%>
  
<tbody>
  <h1> Reviews </h1>
  <% if @review_matches.exists? %>
    <% @review_matches.each do |review| %>
      <tr>
        <!-- To be removed -->
        <strong>Review ID: </strong>
        <%= review.id %> <br>
        
        <strong>Reviewer: </strong>
        <td><% @reviewer = get_user(review.reviewer_id) %></td>
        <%= link_to (@reviewer.fname + " " + @reviewer.lname + " " + @reviewer.id.to_s), user_path(@reviewer) %>
        <br>
        <strong>Review text: </strong>
        <td><%= review.review %></td>
        <br>
        <strong>Rating</strong>
        <td><%= review.rating %></td>
        <br>
        <strong>When</strong>
        <td><%= review.created_at %></td>
        <% if review.reviewer_id == session[:user_id] %>
          <br>
          <%= link_to "Edit review", edit_review_path(review) %>
        <% end %>
        <br> <br>
      </tr>
    <% end %>
  <% else %>
    <h3> No reviews at the moment </h3>
  <% end %>
</tbody>  
</tr>
<%= paginate @review_matches %>
<%= page_entries_info @review_matches %>


<%if(session[:user_id]!=@user.id) %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    
      <%= form_for(@review) do |f| %>

        <%= f.hidden_field :reviewee_id, :value => @user.id %>

        <%= f.label :review %>
        <%= f.text_field :review %>

        <%= f.label :rating %>
        <%= f.text_field :rating %>

      <br><%= f.submit "Leave Review", class: "button" %>
      <% end %>
    </div>
  </div>
<% end %>  